<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:paddingBottom="1dp"
        android:scrollX="3dp"
        android:theme="?attr/actionBarTheme"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back_while"
        app:title="@string/btn_set"
        app:titleMargin="0dp"
        app:titleTextColor="@color/While" />

    <ListView
        android:id="@+id/set_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorGray"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/selector_listview"
        android:scrollbarSize="@dimen/scrollbarSize"
        android:scrollbarThumbVertical="@color/colorPrimary" />

</LinearLayout>